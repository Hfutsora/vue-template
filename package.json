{
  "name": "vue-template",
  "version": "0.0.1",
  "description": "A vue3 template project",
  "packageManager": "pnpm@7.12.2",
  "author": "hfutsora",
  "repository": "https://github.com/Hfutsora/vue-template",
  "workspaces": [
    "packages/*",
    "internal/*"
  ],
  "license": "MIT",
  "scripts": {
    "cz": "czg",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "dev": "vite --config vite.config.ts",
    "format": "prettier --write .",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 && pretty-quick --check",
    "lint:fix": "eslint --fix . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json && pretty-quick",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "dependencies": {
    "@sa/components": "workspace:*",
    "@sa/constants": "workspace:*",
    "@sa/utils": "workspace:*",
    "@element-plus/icons-vue": "^2.0.10",
    "@vueuse/core": "9.3.1",
    "element-plus": "^2.2.22"
  },
  "devDependencies": {
    "@sa/eslint-config": "workspace:*",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@esbuild-kit/cjs-loader": "^2.4.0",
    "@types/jsdom": "^20.0.0",
    "@types/node": "^18.8.0",
    "@types/sass": "^1.43.1",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vitejs/plugin-vue-jsx": "^2.0.1",
    "@vitest/coverage-c8": "^0.25.2",
    "@vitest/ui": "^0.23.4",
    "@vue/test-utils": "^2.1.0",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.13",
    "cz-git": "^1.3.11",
    "czg": "^1.3.11",
    "eslint": "^8.25.0",
    "eslint-define-config": "^1.7.0",
    "expect-type": "^0.14.2",
    "fast-glob": "^3.2.12",
    "husky": "^8.0.1",
    "jsdom": "^20.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "resize-observer-polyfill": "^1.5.1",
    "sass": "^1.55.0",
    "tailwindcss": "^3.2.4",
    "tsx": "^3.10.1",
    "typescript": "^4.8.4",
    "unplugin-auto-import": "^0.11.4",
    "unplugin-element-plus": "^0.4.1",
    "unplugin-vue-components": "^0.22.9",
    "unplugin-vue-define-options": "^0.12.1",
    "vitest": "^0.23.4",
    "vue": "^3.2.41",
    "vue-tsc": "^1.0.9"
  },
  "engines": {
    "node": ">= 16"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "react",
        "react-dom"
      ]
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
